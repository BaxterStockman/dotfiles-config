#!/usr/bin/env perl

use strict;
use warnings;
use utf8;
use DBI;

my $dbfile = shift or die "No database file specified; exiting\n";

my $dsn = "dbi:SQLite:dbname=$dbfile";
my $user     = "";
my $password = "";
my $dbh = DBI->connect($dsn, $user, $password, {
   PrintError       => 0,
   RaiseError       => 1,
   AutoCommit       => 1,
#   FetchHashKeyName => 'NAME_lc',
});

while(1) {
    last if <STDIN> eq eof;
}

$dbh->disconnect;
