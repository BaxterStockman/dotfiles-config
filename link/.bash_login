# Exit if we're not in an ssh session
[[ -n "$SSH_CONNECTION" ]] || return 1

# Set up the terminal to behave properly on receipt of special characters
stty erase ^?
stty erase ^H
stty susp ^Z
stty intr ^C
stty kill ^U
